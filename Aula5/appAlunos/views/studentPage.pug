extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Aluno #{aluno.id}

    .w3-container
      ul.w3-ul.w3-card-4(style="width:50%")
      li
        b Nome:
        span= aluno.nome
      li
        b ID:
        span= aluno.id
      li
        b Git:
        a(href=aluno.git)= aluno.git

    .w3-container.w3-margin-8
      ul.w3-ul
        - for(let i=1; i < 9; i++)
          - key = `tpc#{i}`
          if(key in aluno)
          li
            b TPC#{i}

    footer.w3-container.w3-teal
      h5
        span Gerado por galuno::RPCW2022 em #{d} - [
          a(href="/") Voltar
        span ]